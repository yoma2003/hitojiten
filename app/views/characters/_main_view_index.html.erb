<div class="main_top">
  <div class="main_top_left">
    <div class="category_title">
      <%= "会社" %>
    </div>
    <div class="category_describe">
      〇〇会社の同僚。２０２０年４月より〜　URL：・・・
    </div>
  </div>
  <div class="main_top_right">
    <%= link_to("ログアウト", destroy_user_session_path, method: :delete) %>
    <%= link_to("ユーザー情報編集", edit_user_path(current_user)) %>
    <%= current_user.name %>
  </div>
</div>

<div class="characters">
  <div class="characters_wrapper">
    <% @characters.each do |character| %>
      <div class="character">
        <div class="character_info">
          <div class="character_image">
            <% if character.image.attached? %>
              <%= image_tag character.image %>
            <% else %>
              <%= image_tag "no_image.png" %>
            <% end %>
          </div>
          <div class="character_name"><%= character.name %></div>
          <div class="detail">
            <%= link_to("詳細編集", edit_character_path(character)) %><br>
            <%= link_to("データ削除", character_path(character), method: :delete) %>
          </div>
        </div>
        <div class="character_topic">
          <div class="past_topic">
            <% if character.past_topics[0] %>
              <%= form_with model:character.past_topics[0], url: past_topic_path(character.past_topics[0]), class: "topic_form", data: character.past_topics[0].id, local: true do |f| %>
                <%= f.hidden_field :character_id, value: character.id %>
                <%= f.text_area :past_topic, class: "topic_input past_topic_input", disabled: true %>
              <% end %>
            <% end %>
            <div class="create_date">6/18(日)</div>
          </div>
          <div class="future_topic">
            <% if character.future_topics[0] %>
              <%= form_with model:character.future_topics[0], url: future_topic_path(character.future_topics[0]), class: "topic_form", data: character.future_topics[0].id, local: true do |f| %>
                <%= f.hidden_field :character_id, value: character.id %>
                <%= f.text_area :future_topic, class: "topic_input future_topic_input" , disabled: true %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <input type="text" id="calendar_form" readonly="readonly">
  </div>
</div>
